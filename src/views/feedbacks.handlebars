{{#> layout title='Dashboard' }}
<div class="feedback-container">
      <div class="action-holder">
        <a id="add-feedback-button" href="/add-feedback">Add New</a>
        <form class="logout-form" action="/logout" method="POST">
        <input type="hidden" name="csrf" value="{{csrf}}">
        <input type="submit" value="Logout">
        </form>
      </div>
          {{#each feedbacks}}
      <div class="card-holder">
        <div class="card">
          <p>{{this.name}}</p>
          <p>{{this.email}}</p>
          <p>
            {{this.comment}}
          </p>
          <div class="action-holder">
            <a id="add-feedback-button" href="/edit-feedback?id={{this.id}}">Edit</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
{{/layout}}
